# BlackRoad OS - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# SQLite (default for development)
DATABASE_URL=sqlite:///blackroad.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/blackroad

# ===========================================
# EMAIL CONFIGURATION (SendGrid)
# ===========================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM_ADDRESS=hello@blackroad.io
EMAIL_FROM_NAME=BlackRoad OS

# ===========================================
# APP CONFIGURATION
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development
DEBUG=true

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Analytics (optional)
MIXPANEL_TOKEN=
GOOGLE_ANALYTICS_ID=

# Error Tracking (optional)
SENTRY_DSN=

# ===========================================
# APP URLS
# ===========================================
APP_URL=https://app.blackroad.io
FRONTEND_URL=https://app.blackroad.io

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=https://app.blackroad.io,http://localhost:3000
